/**********QRadioButton**********/
QRadioButton{
	color: #b9b9b9;
}
QRadioButton::indicator::unchecked {
    image: url(:/btn/Resources/Btn/QRadioBtn/r默认.png);
}
QRadioButton::indicator::checked { 
    image: url(:/btn/Resources/Btn/QRadioBtn/r点击.png);
}
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QToolBar{
	background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, stop:0 rgba(54, 200, 136, 1), stop:1 rgba(27, 206, 183, 1));
	border-radius: 4px;
}
ClientInfo{
	 border-radius: 8px;
}